        const string SUB            = "ShapesIfLib::Shapes_Sub";
    };
    module Topic {
        module Shape {
            const string TYPE       = "ShapeType";
            const string WRITER     = "_pub::Shape_writer";
            const string READER     = "_sub::Shape_reader";
        };
    };
};

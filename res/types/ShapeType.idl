module rti {
	module example {

		struct ShapeType {
			@key // identifies the instance (a.k.a data-object)
			string<128> color; 
          
			long x;
			long y;
			long shapesize; 
		};

        enum ShapeFillKind {
            SOLID_FILL,
            TRANSPARENT_FILL,
            HORIZONTAL_HATCH_FILL,
            VERTICAL_HATCH_FILL
        };

        struct ShapeTypeExtended : ShapeType {
            ShapeFillKind fillKind;
            float angle;
        };



        const long PIXEL_MAX_LEN = 100000; // can be large (> 64KB UDP limit)
        struct PictureType {
            short dim;                            // dimension: width or height
            sequence<octet, PIXEL_MAX_LEN> pixel; // pixels
        };

        struct PictureShapeType: ShapeType {
            PictureType picture;
        };
	};
};